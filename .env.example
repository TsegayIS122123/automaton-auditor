# Required API Keys
OPENAI_API_KEY=sk-...           # Get from https://platform.openai.com/api-keys
ANTHROPIC_API_KEY=sk-ant-...     # Get from https://console.anthropic.com/

# LangSmith for Observability (Highly Recommended)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls__...        # Get from https://smith.langchain.com/
LANGCHAIN_PROJECT=automaton-auditor
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Optional: For better rate limiting
OPENAI_ORGANIZATION=org-...       # If you have an org
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60.0

# GitHub (for higher API rate limits)
GITHUB_TOKEN=ghp_...              # Optional, for authenticated git operations

# Logging
LOG_LEVEL=INFO                    # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json                    # json or text

# Temp Directory (optional override)
TEMP_DIR=/tmp/automaton-auditor   # Where to clone repos